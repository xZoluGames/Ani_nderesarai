<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal de la aplicación (Modo claro) -->
    <style name="Theme.AniNderesarai" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Colores de error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Window attributes -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Material components -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.AniNderesarai.AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.AniNderesarai.BottomSheetDialog</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AniNderesarai.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AniNderesarai.Headline2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AniNderesarai.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AniNderesarai.Body1</item>

    </style>

    <!-- Tema para modo nocturno -->
    <style name="Theme.AniNderesarai.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/black</item>

        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <!-- Overlay para AlertDialog -->
    <style name="ThemeOverlay.AniNderesarai.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="colorSurface">@color/surface</item>
    </style>

    <!-- Overlay para BottomSheetDialog -->
    <style name="ThemeOverlay.AniNderesarai.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Estilos de tipografía -->
    <style name="TextAppearance.AniNderesarai.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AniNderesarai.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AniNderesarai.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.AniNderesarai.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo para botones -->
    <style name="Widget.AniNderesarai.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.AniNderesarai.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para CardView -->
    <style name="Widget.AniNderesarai.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Estilo para Floating Action Button -->
    <style name="Widget.AniNderesarai.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/fab_background</item>
        <item name="tint">@color/fab_icon</item>
        <item name="elevation">6dp</item>
    </style>

</resources>